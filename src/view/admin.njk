{% extends "layout.njk" %}

{% block content %}
  <h2>Admin Panel</h2>

  <a href="/admin/new"><button>Add New Post</button></a>

  {% if posts.length %}
    <table role="grid">
      <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for post in posts %}
        <tr>
          <td>{{ post.title }}</td>
          <td>{{ post.date }}</td>
          <td>
            <a href="/admin/edit/{{ post.id }}">Edit</a>
            <a href="/admin/delete/{{ post.id }}" role="button" class="secondary">Delete</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>No posts available.</p>
  {% endif %}
{% endblock %}
