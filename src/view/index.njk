{% extends "layout.njk" %}

{% block content %}
  <h2>Blog Posts</h2>

  {% if posts.length %}
    <ul>
      {% for post in posts %}
        <li>
          <article>
            <h3>{{ post.title }}</h3>
            <p>{{ post.excerpt }}</p>
          </article>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No posts yet.</p>
  {% endif %}
{% endblock %}
